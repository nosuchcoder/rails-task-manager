<h1> New Task </h1>
<%= form_for(@task) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>

  <%= f.label :Details %>
  <%= f.text_field :details %> 

  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%# <i class="far fa-square"> Completed</i> %>
  <%= f.submit %>
<% end %>

<a href="/tasks" class="link_back">Go back to list</a>
